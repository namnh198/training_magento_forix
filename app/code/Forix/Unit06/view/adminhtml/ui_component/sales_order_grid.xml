<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Sales/js/grid/tree-massactions">
            <action name="verify">
                <settings>
                    <url path="forixunit06/order/verify"/>
                    <type>verify</type>
                    <label translate="true">Verify</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="require_verification" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Require Verification</label>
            </settings>
        </column>
    </columns>
</listing>
