<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Training Advanced Text</argument>
            </action>
        </referenceBlock>

        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="one_page_layout"
                   template="Forix_Unit03::onepage.phtml">
                <arguments>
                    <argument name="background_color" xsi:type="string">black</argument>
                    <argument name="color" xsi:type="string">lightskyblue</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="custom_layout" remove="true" />
    </body>
</page>
